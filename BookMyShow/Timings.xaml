<Window x:Class="BookMyShow.Timings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMyShow"
        mc:Ignorable="d"
        Title="Timings" Height="300" Width="300">
    <Grid>
        <Button x:Name="Morning" Content="11 AM" HorizontalAlignment="Left" Margin="54,80,0,0" VerticalAlignment="Top" Width="75" Click="Morning_Click"/>
        <Button x:Name="Afternoon" Content="2 PM" HorizontalAlignment="Left" Margin="54,137,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.475,-0.684" Click="Afternoon_Click"/>
        <Button x:Name="Evening" Content="5 PM" HorizontalAlignment="Left" Margin="176,80,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.64,0.586" Click="Evening_Click"/>
        <Button x:Name="Night" Content="8 PM" HorizontalAlignment="Left" Margin="176,137,0,0" VerticalAlignment="Top" Width="75" Click="Night_Click"/>

    </Grid>
</Window>
